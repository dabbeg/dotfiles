set $mod Mod1

# shutdown ubuntu
bindsym Control+$mod+s exec "i3-nagbar -t warning -m 'You pressed the shutdown shortcut. Do you really want to shutdown?' -b 'Yes, shutdown!' 'sudo /sbin/poweroff'"
# restart ubuntu
bindsym Control+$mod+r exec "i3-nagbar -t warning -m 'You pressed the restart shortcut. Do you really want to restart?' -b 'Yes, restart!' 'sudo /sbin/reboot'"
# logout
bindsym Control+$mod+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# lock
bindsym Control+$mod+l exec $HOME/.i3/scripts/lock

# Desktop wallpaper
exec --no-startup-id feh --no-xinerama --bg-scale ~/.i3/pictures/wallpaper.jpg

# Starts the compostition manager Compton
exec --no-startup-id compton -cCGb --backend glx --vsync opengl

# Start insync for google-drive
exec --no-startup-id insync start

# Removes the titlebars over every window
new_window pixel

# Binds the Print Scrn button to take a screenshot with scrot and save it to ~/Pictures/
bindsym Print exec scrot 'screenshot-%Y-%m-%d_$wx$h.png' -e 'mv $f ~/pictures/screenshots/'

# Toggle between keyboard layouts
bindsym $mod+Tab exec /home/dabbeg/.i3/scripts/i3blocks/toggleKeyboardLayout

# Name the workspaces
set $tag1 terminal
set $tag2 www
set $tag3 code
set $tag4 remote
set $tag8 windows
set $tag9 music

# switch to workspace
bindsym $mod+1 workspace 1 $tag1
bindsym $mod+2 workspace 2 $tag2
bindsym $mod+3 workspace 3 $tag3
bindsym $mod+4 workspace 4 $tag4
bindsym $mod+8 workspace 8 $tag8
bindsym $mod+9 workspace 9 $tag9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1 $tag1
bindsym $mod+Shift+2 move container to workspace 2 $tag2
bindsym $mod+Shift+3 move container to workspace 3 $tag3
bindsym $mod+Shift+4 move container to workspace 4 $tag4
bindsym $mod+Shift+8 move container to workspace 8 $tag8
bindsym $mod+Shift+9 move container to workspace 9 $tag9

# change the font
font pango: Lucida Grande 9

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

# Touchpad controls
bindsym XF86TouchpadToggle exec /home/dabbeg/.i3/scripts/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioStop exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop"
bindsym XF86AudioPrev exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym XF86AudioNext exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse set Master toggle

bindsym $mod+space exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym $mod+Left exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym $mod+Right exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym $mod+Up exec amixer -q set Master 2dB+ unmute && pkill -RTMIN+1 i3blocks
bindsym $mod+Down exec amixer -q set Master 2dB- unmute && pkill -RTMIN+1 i3blocks

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec xfce4-terminal

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
#bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
#bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+d exec rofi -show run -terminal xfce4-terminal -font 'Fira Mono Medium 16' -lines 3 -eh 2 -width 100 -padding 800 -opacity "75" -bw 0 -bc "#282828" -bg "#282828" -fg "#928374" -hlbg "#282828" -hlfg "#ebdbb2"

# change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
#bindsym $mod+d focus child

# switch to workspace
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+0 move container to workspace 10

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym semicolon resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango: FontAwesome 9
    colors {
        # Whole color settings
        #background #000000
        #statusline #ffffff
        #separator  #666666

        # Type             border  background font
        #focused_workspace  #008fff #007fff #ffffff
        #active_workspace   #333333 #5f676a #ffffff
        #inactive_workspace #333333 #222222 #888888
        #urgent_workspace   #aa0000 #990000 #ffffff

        statusline #AAAAAA
        focused_workspace #0080ff #0080ff #000000
        inactive_workspace #00000 #000000 #AAAAAA
        urgent_workspace #d33682 #d33682 #fdf6e3
        #focused_workspace #0088CC #0088CC #FFFFFF
        #active_workspace #333333 #333333 #FFFFFF
        #inactive_workspace #333333 #333333 #888888
        #urgent_workspace #2F343A #900000 #FFFFFF
    }
    # i3bar position
    position top
    # Using custom i3status.conf
    status_command i3blocks -c ~/.i3/i3blocks.conf
}
