# Run xmodmap with its config
exec --no-startup-id xmodmap $HOME/.xmodmaprc

# Removes the titlebars over every window
#for_window [class="^.*"] border pixel 0
for_window [class="^.*"] border pixel 1

# Starts the compostition manager Compton
exec --no-startup-id sleep 5; compton --config $HOME/.compton.conf

# Starts up syndaemon which disables the touchpad when typing
#exec --no-startup-id syndaemon -i 0.6

# Starts up unclutter which hides the cursor when not being used
exec --no-startup-id unclutter -b --timeout 2

# Starts up dunst, a notification daemon
exec --no-startup-id dunst

# Disable display power saver
exec xset s off -dpms

#Read Xresources
exec xrdb $HOME/.Xresources

gaps inner 15
gaps top 40

exec_always --no-startup-id autotiling
