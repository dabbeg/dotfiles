workspace $workspace10 output HDMI-0

# lock
bindsym Control+$mod+l exec $HOME/.i3/scripts/lock

# Binds the Print Scrn button to take a screenshot with scrot and save it to ~/Pictures/screenshots
bindsym Print exec $HOME/.i3/scripts/screenshot

# Binds the windows button to toggle the touchpad on/off
bindsym F2 exec $HOME/.i3/scripts/i3/toggle_touchpad.sh

# Binds the mod + Print Scrn button to take a screenshot with scrot -s and save it to ~/Pictures/screenshots
bindsym $mod+Print exec $HOME/.i3/scripts/screenshot "select"

# Toggle between keyboard layouts
bindsym $mod+Tab exec /home/dabbeg/.i3/scripts/i3blocks/toggleKeyboardLayout

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

# Show the first scratchpad window [keycode 20 == key right of 0]
bindcode $mod+20 scratchpad show

for_window [title="Messenger"] move window to scratchpad, resize grow width 80 px
exec --no-startup-id sleep 10; messengerfordesktop

for_window [title="Spotify"] move window to workspace $workspace10
exec --no-startup-id sleep 10; spotify

for_window [title="Firefox"] move window to workspace $workspace2
exec --no-startup-id sleep 10; firefox

# Move the current workspace to the screen to the right
bindsym $mod+ctrl+j move workspace to output left

# Move the current workspace to the screen to the left [keycode 40 == key right of l]
bindcode $mod+ctrl+47 move workspace to output right

# change the font
#font pango: Lucida Grande 9
font pango: System San Francisco Display 10

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20
bindsym XF86MonBrightnessDown exec xbacklight -dec 20

# Touchpad controls
bindsym XF86TouchpadToggle exec /home/dabbeg/.i3/scripts/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioStop exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop"
bindsym XF86AudioPrev exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym XF86AudioNext exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -q -D pulse set Master toggle

bindsym $mod+space exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym $mod+Left exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym $mod+Right exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"
bindsym $mod+Up exec amixer -q set Master 2dB+ unmute && pkill -RTMIN+1 i3blocks
bindsym $mod+Down exec amixer -q set Master 2dB- unmute && pkill -RTMIN+1 i3blocks

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
#bindsym $mod+Return exec i3-sensible-terminal
#bindsym $mod+Return exec xfce4-terminal
bindsym $mod+Return exec urxvt

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
#bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
#bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+d exec rofi -show run -terminal urxvt -font 'Droid Sans Mono 16' -lines 3 -eh 2 -width 50 -padding 20 -bw 0 -bc "#1B1918" -bg "#1B1918" -fg "#F1EFEE" -hlbg "#1B1918" -hlfg "#F22C40" -auto-select -fuzzy

# change focus
bindsym  $mod+j focus left
bindsym  $mod+k focus down
bindsym  $mod+l focus up
bindcode $mod+47 focus right

# move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+l move up
bindsym $mod+Shift+semicolon move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
#bindsym $mod+space focus mode_toggle

# focus the parent container
